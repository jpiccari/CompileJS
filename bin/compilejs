/*jshint node:true */

'use strict';

var fs = require('fs'),
	path = require('path'),
	compile = require('../lib/compile');


if(!process.argv[2]) {
	console.error('usage: ' + path.basename(process.argv[1]) + ' [file] ...');
	process.exit(1);
}


/* Run compilejs on the rest of the args. */
process.argv.splice(2).forEach(function(file) {
	fs.stat(file, function(err, stats) {
		if(!err && stats.isFile()) {
			fs.createReadStream(file)
				.pipe(compile())
				.pipe(process.stdout);
		} else {
			console.error('error: ' + path.resolve(file) + ' does not exist or is not readable.');
		}
	});
});
